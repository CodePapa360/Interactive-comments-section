{
  "name": "interactive-comments-section",
  "version": "1.0.0",
  "description": "Interactive comments section",
  "web": "./dist/index.html",
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./"
    }
  },
  "scripts": {
    "build-sass": "sass ./src/sass/main.scss ./src/compiled/main.css",
    "build-js": "babel src/js --out-dir ./src/compiled",
    "build": "npm run build-sass && npm run build-js",
    "watch-sass": "sass --watch ./src/sass/main.scss ./src/compiled/main.css",
    "watch-js": "babel src/js --out-dir ./src/compiled --watch",
    "live-server": "live-server ./src",
    "start": "npm-run-all -p watch-sass watch-js live-server"
  },
  "author": "Alamin",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.22.6",
    "@babel/core": "^7.22.7",
    "@babel/preset-env": "^7.22.7",
    "npm-run-all": "^4.1.5",
    "sass": "^1.60.0"
  }
}

{
  "name": "interactive-comments-section",
  "version": "1.0.0",
  "description": "Interactive comments section",
  "main": "controller.js",
  "scripts": {
    "serve:html": "browser-sync start --server --files './src/index.html'",
    "serve:css": "sass ./src/sass/main.scss ./src/css/main.css --watch --no-source-map",
    "start": "npm-run-all --parallel serve:*",
    "build:sass": "sass ./src/sass/main.scss ./src/css/main.css --no-source-map",
    "build:js": "terser ./src/js/controller.js --compress --mangle",
    "ready": "npm-run-all build:*"
  },
  "author": "Alamin",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.63.6",
    "terser": "^5.19.2"
  }
}
